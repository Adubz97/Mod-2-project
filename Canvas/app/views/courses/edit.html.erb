<div class="container">
    <div class="row">
      <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card card-signin my-5">
          <div class="card-body">
          <h3 class="card-title text-center">Edit course</h3>
          <hr class="my-4">
<%= form_for @course do |f| %>
  <div class="form-group">
    <%= f.hidden_field :professor_id, {value: current_user[:id]} %>
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
    <%= f.label :description %>
    <%= f.text_field :description, class: "form-control" %>
    <%= f.label :credit %>
    <%= f.number_field :credit, min: 1, max: 4, class: "form-control" %>
    <%= f.label :setting %>
    <%= f.select :setting, ["On Campus", "Online", "Remotely"], {prompt: "Select Setting"}, class: "form-control" %>
    <%= f.label :semester %>
    <%= f.select :semester, ["Spring", "Summer", "Fall", "Winter"], {prompt: "Select Semester"}, class: "form-control" %>
    <%= f.label :college %>
    <%= f.collection_select :college_id, College.all, :id, :name, {prompt: "Select College"}, class: "form-control" %><br>
    <%= f.submit "Submit changes", class: "btn btn-primary" %>
  </div>
<% end %>
</div>
        </div>
      </div>
    </div>