

<div class="container">
    <div class="row">
      <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card card-signin my-5">
          <div class="card-body">
          <h3 class="card-title text-center">Register for a class</h3>
          <hr class="my-4">
<%= form_for @registration do |f| %>
  <div class="form-group">
<%= f.hidden_field(:student_id, {value: current_user[:id]}) %>
<%= f.hidden_field(:registration_number, {value: Time.now.to_i}) %>
<%= f.label(:course)%>: 
<%= f.grouped_collection_select(:course_id, College.order(:name), :courses, :name, :id, :name, {prompt: "Select a course"}) %>
<%= f.submit "Register", class: "btn btn-primary"%>
  </div>
<% end %>

</div>
        </div>
      </div>
    </div>